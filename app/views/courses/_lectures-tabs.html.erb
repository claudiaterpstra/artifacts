<% if @course.user == current_user %>
  <% if @course.lectures != [] %>
    <% count = 1 %>
    <% @course.lectures.each do |lecture| %>
      <div class="tab tab-title">
        <h2 class="tab--title">
          <div class="tab-icon"></div>
            Lecture <%= count %>
            <% count += 1 %>
        </h2>
          <div class="content-block block-skin-grey clearfix">
            <h2 class="content-block-title"><%= lecture.title %></h2>
              <p><%= lecture.description %></p>
          </div>
      </div>
    <% end %>
    <%= link_to "Add your next lecture", new_course_lecture_path(@course) %>
      <p>Publish this course</p>
    <% else %>
     <%= link_to "Add your first lecture", new_course_lecture_path(@course) %>
  <% end %>

<% elsif current_user.participates_to?(@course) && course.published %>
  <% count = 1 %>
  <% @course.lectures.each do |lecture| %>
    <div class="tab tab-title">
      <h2 class="tab--title">
        <div class="tab-icon"></div>
          Lecture <%= count %>
          <% count += 1 %>
      </h2>
      <div class="content-block block-skin-grey clearfix">
        <h2 class="content-block-title"><%= lecture.title %></h2>
          <p><%= lecture.description %></p>
      </div>
    </div>
  <% end %>
<% else %>
  <% count = 1 %>
  <% @course.lectures.each do |lecture| %>
    <div class="tab tab-title">
      <h2 class="tab--title">
        <div class="tab-icon"></div>
          Lecture <%= count %>
          <% count += 1 %>
      </h2>
      <div class="content-block block-skin-grey clearfix">
        <h2 class="content-block-title"><%= lecture.title %></h2>
        <p><%= lecture.description %></p>
      </div>
    </div>
  <% end %>
<% end %>




