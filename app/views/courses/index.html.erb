
<div class="container">
  <div class="text-center course-heading">
    <h1>Browse Courses</h1>
  </div>
  <%= link_to "Add A Course", new_course_path %>
  <br>

  <div class="courses-display">

    <% @courses.each do |course| %>

      <div class="courses-box">
        <div class="card course-card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path course.photo? ? course.photo.path : 'logo.png', crop: :fill %>');">
          <div class="card-category"><%= course.category %></div>
          <div class="card-description">
            <h2><%= course.name %></h2>
            <p>Artist: <%= course.user.first_name %> <%= course.user.last_name %></p>
          </div>
          <%= link_to "", course_path(course), class: "card-link"  %>
        </div>
        <%= link_to "Edit Course", edit_course_path(course) %>
      </div>

        <% end %>

      </div>

</div>
