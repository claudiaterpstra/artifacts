
<div class="lecture-container">
  <div class="lecture-banner">
    <iframe width="560" height="315" src=" <%= @lecture.url %>" frameborder="0" allowfullscreen></iframe>
  </div>
</div>

<div class="container lectures-info">
  <div class="lecture-banner-title">
    <p><%= @lecture.course.name %></p>
    <h2><%= @lecture.title %></h2>
  </div>

  <div class="lecture-description">
    <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Consequatur rem ipsa, suscipit animi.
    Quisquam eos repellendus assumenda.</p>
  </div>
</div>

<div class="container user-uploads-container">
  <div class="user-uploads-title">
    <p>Your Turn</p>
    <h2>Submit Your Artwork!</h2>
  </div>
</div>

<div class="user-upload-container">
  <div class="user-upload-form">

    <% if @lecture.artworks.blank? %>
      Upload your first artwork for <%= @lecture.name %>
      <%= render 'artworks/form', lecture: @lecture, artwork: @artwork %>
    <% else %>
      <div id="artworks">
        <ul>
        <% @lecture.artworks.each do |artwork| %>
           <li data-artwork-id="<%= artwork.id %>">
            <%= cl_image_tag artwork.photo.path, width: 500, height: 300, crop: :fill %>
           <%= link_to "Delete", artwork, method: :delete, remote: true %>
           </li>
        <% end %>
        </ul>
      </div>
      <%= render 'artworks/form', lecture: @lecture, artwork: @artwork %>
    <% end %>
  </div>
</div>

