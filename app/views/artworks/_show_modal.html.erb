<div data-toggle="modal" data-target="#artwork-<%= artwork.id %>"><%= cl_image_tag artwork.photo.path, width: 500, height: 300, crop: :fill %></div>
<p><%= artwork.message %></p>

<div id="artwork-<%= artwork.id %>" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel">Artwork from: <%= artwork.user.first_name %></h4>
      </div>
      <div class="modal-body">
        <%= cl_image_tag artwork.photo.path, width: 500, height: 300, crop: :fill %>
        <p><%= artwork.message %></p>

        <div style='display:none'>
          <form id='imageform'>
            <label>Comment</label>
            <input type='textarea' name='comment'> </input>
            <input type='submit' value='Tag'></input>
          </form>
        </div>

        <% artwork.feedbacks.each do |feedback| %>
            <%= render 'feedbacks/show', feedback: feedback %>
          <% end %>
        <div id="feedbacks-<%= artwork.id %>"></div>

        <%= render 'feedbacks/form', :artwork => artwork, :feedback => feedback %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>




