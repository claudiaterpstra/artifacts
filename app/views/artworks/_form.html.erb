<%= simple_form_for [lecture, artwork], remote: true, class: 'form-inline' do |f| %>
    <div class="input-group">
      <i class="fa fa-upload" aria-hidden="true"></i>
      <%= f.input :photo, as: :attachinary, label: 'Upload jouw foto..', input_html: { class: 'course_photo_upload' }, label_html: { class: 'course_photo_upload_label', id: 'artwork_photo_upload_label' } %>
    </div>
      <%= f.input :message, label:'Titel van jouw kunstwerk' %>
      <%= f.submit "Versturen", class: "btn btn-frida" %>
    <% end %>
