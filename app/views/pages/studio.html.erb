<%= render 'shared/subnav' %>
  <div class="container user-studio">
    <div class="row">
      <div class="col-lg-3 col-md-4 hide-sm" id="sticky">
        <div class="user-studio-sidebar">
          <h4>Filter by lecture:</h4>
          <ul>
            <li>
              <%= link_to "All (#{@artworks_all.count})", studio_path %>
            </li>
              <% @lectures.uniq.each do | lecture | %>
            <li>
              <%= link_to "#{lecture.title} (#{lecture.artworks.count})", studio_path(lecture: lecture.title) %>
            </li>
            <% end %>
          </ul>
        </div>
    </div>

    <div class="col-lg-9 col-md-8 col-sm-12">
      <h2>Your Studio</h2>
      <h4>Hey <%= @user.first_name %>! Find all your artwork uploads here and view feedback from your course instructor.</h4>
        <div class="hr-medium">
          <hr>
        </div>

        <h3>Your Artwork</h3>
          <% if @artworks_all.count > 0 %>
            <% @artworks.order(:id).each do |artwork| %>

            <div class="studio-uploads">
              <div data-toggle="modal" data-target="#artwork" class="studio-upload-img tooltip">
                <span class="tooltiptext">Add/View Feedback</span>
                <%= render 'artworks/show', artwork: artwork, feedback: @feedback %>
              </div>
            <% end %>
           </div>
          <% end %>
    </div>
  </div>
</div>
