<div class="container">
  <div class="banner-dashboard">
    <div class="dashboard-bio">
       <%= unique_image_tag(current_user, :width=>200, :height=>200, :gravity=>"face", :radius=>"max", :crop=>"fill") %>
       <hr>
       <p>Welcome to your dashboard,</p>
       <h1><%= current_user.full_name %>!</h1>
       <br>
       <p>Young professional from Paris and have always wanted to be an artist but never had the confidence (or the time). Please be patient with me! Love to travel.</p>
    </div>
    <div class="dashboard-stats">
      <h4>You are enrolled on <%= pluralize current_user.participations.count, "course" %>.</h4>
      <h4>You have unlocked <%= pluralize current_user.badge_count, "badge" %>.</h4>
      <h4>You have contributed <%= pluralize current_user.course_reviews.count, "review" %>.</h4>
    </div>
  </div>
</div>

<div class="container">
  <div class="dashboard-title frida-report">
    <h1>Your Frida Report</h1>
  </div>
</div>


<div class="container">
  <div class="user-studio-gallery carousel">
    <%= render 'shared/enrolledcoursecard' %>
  </div>
</div>
</div>

<div class="dashboard-achievements">
  <div class="container">
    <div class="dashboard-title frida-report">
      <h1>Your Badges</h1>
    </div>
  </div>
  <div class="achievement-badges">
    <div class="achievement-participation <%= current_user.one_participation? ? '' : 'achievement-locked' %>"></div>
    <div class="achievement-three-participations <%= current_user.three_participations? ? '' : 'achievement-locked' %>"></div>
    <div class="achievement-first-expressionism <%= current_user.first_expressionism? ? '' : 'achievement-locked' %>"></div>
    <div class="achievement-first-review <%= current_user.first_review? ? '' : 'achievement-locked' %>"></div>
  </div>
</div>





