<% content_for(:title_tag) do  %>
  frida - order confirmation for <%= @course.name.downcase %> by <%= @course.user.full_name %>
<% end %>
                                 
<div class="payments-info">
  <div class="container payments-banner-title">
    <p>Order Confirmation</p>
    <h2><%= @course.name %></h2>
  </div>
  <div class="container payments-container">
    <div class="banner banner-course-image" style="background-image: url('<%= cl_image_path @course.photo? ? @course.photo.path : 'logo.png', crop: :fill %>');"></div>
    <h3>Hey <%= current_user.first_name %>!</h3>
    <p>Thanks for paying <%= humanized_money_with_symbol(@order.amount) %>.</p>
    <p>You're all set to start <%= @course.name %> by <%= @course.user.first_name %> <%= @course.user.last_name %>.</p>

    <div class="order-links">
       <%= link_to '<i class = "fa fa-chevron-left"></i> Go to your Dashboard'.html_safe, dashboard_path, class:"studio-link", id:"payments-links" %>
       <%= link_to 'Start Your Course <i class = "fa fa-chevron-right"></i>'.html_safe, course_path(@course), class:"studio-link" %>
    </div>
