  <div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-offset-4 col-sm-4">
      <div class="form-titles">
        <h2>Aanmelden</h2>

        <br>
        <%= render "devise/shared/facebookaanmelden" %>
        <div class="line-text">
        <p><span>of</span></p>
        </div>
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%# f.error_notification %>

          <div class="form-inputs" >
            <%= f.input :first_name, label: 'Voornaam', required: true, autofocus: true %>
            <%= f.input :last_name, label: 'Achternaam', required: true, autofocus: true %>
            <%= f.input :email, label: 'E-mailadres', required: true, autofocus: true %>
            <%= f.input :password, label: 'Wachtwoord', required: true, hint: ("minimum #{@minimum_password_length} karakters" if @minimum_password_length) %>
            <%= f.input :password_confirmation, label: 'Bevestig je wachtwoord', required: true %>
          </div>

          <div class="form-actions-btn">
            <div class="form-actions">
              <%= f.button :submit, "Aanmelden", class: "btn btn-frida-form" %>
            </div>
            <% end %>
          </div>

          <div class="additional-links">
          <%= link_to "Log in", new_session_path(:user) %><br />
          </div>
          <%= render "devise/shared/links" %>
          <br>
      </div>
    </div>
  </div>
</div>

