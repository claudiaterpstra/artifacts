<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-offset-4 col-sm-4">
     <div class="form-titles">
    <h2>Verander je wachtwoord</h2>

    <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= f.error_notification %>
      <div class="form-inputs">
      <%= f.input :reset_password_token, as: :hidden %>
      <%= f.full_error :reset_password_token %>

    <%= f.input :password, label: "Nieuw wachtwoord", required: true, autofocus: true, hint: ("minimum #{@minimum_password_length} karakters" if @minimum_password_length) %>
    <%= f.input :password_confirmation, label: "Bevestig je wachtwoord", required: true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Verander mijn wachtwoord", class: "btn login-btn" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
  </div>
       <br>
      <br>
    </div>
    </div>
  </div>
</div>
